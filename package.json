{
  "name": "simplest-react-scss-lib",
  "preversion": "0.1.0",
  "version": "0.1.0",
  "description": "Simplest React + SCSS library",
  "main": "src/index.js",
  "scripts": {
    "start": "npm-run-all dev",
    "dev": "npm-run-all compile storybook",
    "storybook": "start-storybook  -s .storybook/public -p 6006",
    "storybook-build": "build-storybook -c .storybook  -s .storybook/public -o storybook-release",
    "lint": "eslint .",
    "build": "npm-run-all build-lib build-css-lib build-docs",
    "build-lib": "npm-run-all build-lib-package build-lib-code build-lib-transform",
    "build-lib-code": "webpack -p --config ./config/webpack.lib.production.config.js",
    "build-lib-transform": "babel --root-mode upward  -d ./dist/component-library --ignore ./dist/component-library/src/index.js ./dist/component-library",
    "build-lib-config": "babel --root-mode upward  -d ./dist/component-library/config ./dist/component-library/config",
    "build-lib-package": "babel-node ./scripts/build-lib-package.js",
    "build-css-lib": "npm-run-all build-css-lib-package build-css-lib-code",
    "build-css-lib-code": "webpack -p --config ./config/webpack.lib-css.production.config.js",
    "build-css-lib-package": "babel-node ./scripts/build-css-lib-package.js",
    "build-docs": "babel-node ./scripts/build-docs.js",
    "compile": "babel-node ./scripts/component-scripts.js",
    "version": "npm-run-all changelog build",
    "postversion": "npm-run-all release",
    "release": "npm-run-all release-lib release-css-lib",
    "release-lib": "npm run --prefix ./dist/component-library release-me",
    "release-me": "npm publish",
    "release-css-lib": "npm run --prefix ./dist/component-library-css release-me"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:varya/simplest-react-scss-lib.git"
  },
  "keywords": [
    "scss",
    "react",
    "component library"
  ],
  "author": "Varya Stepanova <mail@varya.me>",
  "license": "ISC",
  "dependencies": {
    "@popperjs/core": "^2.4.4",
    "@svgr/webpack": "^5.4.0",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-id-generator": "^3.0.1",
    "react-radio-context": "^2.0.0",
    "resolve-url-loader": "^3.1.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/node": "^7.10.5",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-react": "^7.10.4",
    "@babel/register": "^7.11.5",
    "@design-system/changelogger": "^1.2.0",
    "@storybook/addon-a11y": "^5.3.21",
    "@storybook/addon-actions": "^5.3.21",
    "@storybook/addon-backgrounds": "^5.3.21",
    "@storybook/addon-docs": "^5.3.21",
    "@storybook/addon-knobs": "^5.3.21",
    "@storybook/addon-links": "^5.3.21",
    "@storybook/addon-notes": "^5.3.21",
    "@storybook/addon-viewport": "^5.3.21",
    "@storybook/addons": "^5.3.21",
    "@storybook/react": "^5.3.21",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.1.0",
    "babel-plugin-add-module-exports": "^1.0.4",
    "babel-plugin-inline-react-svg": "^1.1.1",
    "cross-var": "^1.1.0",
    "css-loader": "^2.0.0",
    "csso-webpack-plugin": "^2.0.0-beta.1",
    "eslint": "^6.5.1",
    "eslint-config-airbnb": "18.0.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.21.0",
    "eslint-plugin-react-hooks": "^1.7.0",
    "file-loader": "4.3.0",
    "find": "^0.3.0",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "on-build-webpack": "^0.1.0",
    "parallel-webpack": "^2.6.0",
    "replace-in-file": "^5.0.2",
    "sass-all-variable-loader": "^0.1.5",
    "sass-loader": "^8.0.0",
    "shelljs": "^0.8.4",
    "storybook-addon-themes": "5.4",
    "style-loader": "^1.2.1",
    "url-loader": "^4.1.0",
    "webpack": "^4.40.2",
    "webpack-cli": "^3.3.12"
  },
  "peerDependencies": {
    "node-sass": "^4.12.0"
  }
}
